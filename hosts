#example of hosts.ini file
[all]
#define hostname/ip of each node
ready8s-master1 ansible_host=10.1.11.216
ready8s-master2 ansible_host=10.1.11.217
ready8s-master3 ansible_host=10.1.11.218

[all:vars]
#ansible machine host user
ansible_user=kube
#ssh key location, should be copy on to each node before hand
ansible_ssh_private_key_file=/home/ubuntu/.ssh/id_rsa
#set the ansible interpreter, should always be python3
ansible_python_interpreter=/usr/bin/python3
host_key_checking=True

[master]
#define each master to its group
ready8s-master1
ready8s-master2
ready8s-master3

#Change this variable to configure a different network plugin
[master:vars]
networkplugin=cilium
multimaster=true
loadbalancer=True
ufwfirewall=True
replicatestorage=false
dashboard=true

[worker]
#define each worker to it group
#worker1
#worker2
#worker3